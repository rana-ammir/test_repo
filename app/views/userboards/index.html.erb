<% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
  <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-8">
		<h2>Userboards</h2>
		<ol class="breadcrumb">
			<li>
				<a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
			</li>
			<li class="active">
				<strong>
					<%= link_to "Userboards", userboards_path %>
				</strong>
			</li>
		</ol>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-12">
					<div class="ibox float-e-margins">
							<div class="ibox-title">
									<h5>Userboards</h5>
									<div class="ibox-tools">
											<%= link_to 'New Userboard', new_userboard_path, class: "btn btn-sm btn-white", style: "color:grey;"%>
									</div>
							</div>
							<div class="ibox-content">

									<table class="table table-striped">
											<thead>
											<tr>
													<th>Name</th>
													<th>Type</th>
													<th>Color</th>
													<th>Created By</th>
													<th>Active</th>
													<th>Actions</th>
											</tr>
											</thead>
											<tbody>
												<% @userboards.each do |userboard| %>
													<tr>
														<td><%= userboard.name %></td>
														<td><%= userboard.userboard_type %></td>
														<td><%= userboard.color %></td>
														<td><%= userboard.user.fullname%></td>
														<td>
															<div class="checkbox-member">  
																<%= check_box_tag :status, userboard.id , userboard.status, class: 'i-checks userboard-active' %>
															</div>
														</td>
														<td>
															<%= link_to edit_userboard_path(id: userboard.id) do %>
																<i class="fa fa-pencil-square-o"></i> 
															<%end%>
															&nbsp&nbsp
															<%= link_to userboard_path(id: userboard.id), data: { confirm: 'Are you sure?' }, method: :delete do %>
																<i class="fa fa-remove"></i> 
															<%end%>
														</td>
													</tr>
												<%end%>
											</tbody>
									</table>
							</div>
					</div>
			</div>
	</div>
</div>