<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Userboards</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li>
        <%= link_to "My Task", my_board_userboards_path %>
      </li>
      <li class="active">
        <strong>
          <%= link_to "Boards", my_board_userboards_path %>
        </strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Userboards</h5>
              </div>
              <div class="ibox-content">
                <%= form_for userboards_path, method: "get", html: {class: "form-horizontal"} do |f| %>
                  <div class="form-group"><label class="col-lg-2 control-label">Status</label>
                    <div class="col-lg-3">
                      <%= f.select :status, options_for_select([["All","All"],["Not-Complete","Not-Complete"],["New","New"],["In-Progress","In-Progress"],["Completed","Completed"]], "Not-Complete"), {}, class: "form-control task-status" %>
                    </div>
                  </div>
                  <div class="form-group"><label class="col-lg-2 control-label">My Boards</label>
                    <div class="col-lg-4">
                      <% @userboards.each do |userboard| %>
                        <div class="btn btn-primary userboard-btn" data-userboard-id="<%= userboard.id%>"> <%= userboard.name %> </div>
                      <%end%>
                    </div>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Tasks and Activities</h5>
              </div>
              <div class="ibox-content">
                  <input type="text" class="form-control input-sm m-b-xs" id="filter"
                         placeholder="Search in table">
                      <div class="my-tasks-table">
                      <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                      <thead>
                      <tr> 
                          <th>Status</th>
                          <th>Description</th>
                          <th>Due Date</th>
                          <th>Progress</th>
                          <th>Board</th>
                          <th data-hide="phone,tablet">Date</th>
                          <th data-hide="phone,tablet">Description</th>
                          <th data-hide="phone,tablet">Hours</th>
                      </tr>
                      </thead>
                      <tbody>
                        <% @tasks.each do |task| %>
                          <tr>
                              <td><%= task.status %></td>
                              <td><%= task.description %></td>
                              <td><%= task.due_date.strftime("%m-%d-%Y") if task.due_date.present? %></td>
                              <td><%= task.progress %></td>
                              <td>Dropdown</td>
                              <% if task.activities.present? %>
                                <% task.activities.each do |activity| %>
                                  <td><%= activity.activity_date.strftime("%m-%d-%Y") if activity.activity_date.present? %></td>
                                  <td><%= activity.description %></td>
                                  <td><%= activity.hours %></td>
                                <%end%>
                              <%end%>
                          </tr>
                        <%end%>
                      </tbody>
                      <tfoot>
                      <tr>
                          <td colspan="5">
                              <ul class="pagination pull-right"></ul>
                          </td>
                      </tr>
                      </tfoot>
                  </table>
                </div>
              </div>
          </div>
      </div>
  </div>
</div>