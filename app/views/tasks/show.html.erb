<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>Tasks</h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li>
        	<%= link_to "Tasks", tasks_path %>
        </li>
        <li class="active">
          <strong>
            <%= link_to "Task", task_path(@task.id) %>
          </strong>
        </li>
    	</ol>
		</div>
	<div class="col-lg-2">
	</div>
</div>

<div class="row">
<div class="col-lg-9">
<div class="wrapper wrapper-content animated fadeInUp">
<div class="ibox">
<div class="ibox-content">
<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <h2><%= @task.description.truncate(40) %></h2>
        </div>
        <dl class="dl-horizontal">
            <dt>Status:</dt>
            <dd><span class="label label-primary"><%=@task.status%></span></dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">

            <dt>Requested by:</dt>
            <% user = task_user(@task.requestor_id) %>
            <dd class="project-people">
            	<%= image_tag user.avatar.url, class: "img-circle" %><br>
            	<%= user.fullname %>
            </dd>
            <%if @task.assigned_to_id.present?%>
            <dt>Assigned to:</dt>
            <% assigned_user = task_user(@task.assigned_to_id) %>
            <dd class="project-people">
            	<%= image_tag assigned_user.avatar.url, class: "img-circle" %><br>
            	<%= assigned_user.fullname %>
            </dd>
            <%end%>
            <dt>Time on:</dt>
            <dd><%= @task.actual_hours%>h </dd>
        </dl>
    </div>
    <div class="col-lg-7" id="cluster_info">
        <dl class="dl-horizontal">

            <dt>Due Date:</dt>
            <dd><%= @task.due_date.strftime("%m-%d-%Y") %></dd>
            <dt>Created On:</dt>
            <dd><%= @task.created_at.to_date.strftime("%m-%d-%Y") %></dd>
            <%if @task.completion_date.present?%>
            <dt>Completed On:</dt>
            <dd><%= @task.completion_date.to_date.strftime("%m-%d-%Y") %></dd>
            <%end%>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <dl class="dl-horizontal">
            <dt>Completed:</dt>
            <dd>
                <div class="progress progress-striped active m-b-sm">
                    <div style="width: 60%;" class="progress-bar"></div>
                </div>
                <small>Project completed in <strong>60%</strong>. Remaining close the project, sign a contract and invoice.</small>
            </dd>
        </dl>
    </div>
</div>
