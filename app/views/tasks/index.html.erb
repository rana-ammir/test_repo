<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>Tasks</h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li class="active">
          <strong>
            <%= link_to "Tasks", tasks_path %>
          </strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tasks</h5>
                <div class="ibox-tools">
                    <%= link_to 'New Task', new_task_path, class: "btn btn-sm btn-white", style: "color:grey;"%>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Description</th>
                      <th>Type</th>
                      <th>Status</th>
                      <th>Due Date</th>
                      <th>Requestor</th>
                      <th>Assigned To</th>
                      <th>Actual Hours</th>
                      <th>Completion Date</th>
                      <th>Progress</th>
                      <th>Created On</th>
                      <th>Actions</th>  
                    </tr>
                    </thead>
                    <tbody>
                      <% @tasks.each do |task| %>
                        <tr>
                          <td><%=link_to "#{task.description.truncate(40)}", task_path(id: task.id) %></td>
                          <td><span class="line"><%= task.task_type %></span></td>
                          <td><span class="line"><%= task.status %></span></td>
                          <td><%= task.due_date %></td>
                          <% user = User.find(task.requestor_id)%>
                          <td><%= user.fullname%></td>
                          <% task.assigned_to_id.present? ? assigned_user = User.find(task.assigned_to_id) : assigned_user = nil %>
                          <td><%= assigned_user.present? ? assigned_user.fullname : nil %></td>
                          <td><%= task.actual_hours %></td>
                          <td><%= task.completion_date.present? ? task.completion_date.strftime("%m-%d-%Y") : nil %></td>
                          <td><%= task.progress %>%</td>
                          <td><%= task.created_at.strftime("%m-%d-%Y") %></td>
                          <td>
                            <%= link_to edit_task_path(id: task.id) do %><i class="fa fa-pencil-square-o"></i> 
                            <%end%>
                            <%= link_to task_path(id: task.id), data: { confirm: 'Are you sure?' }, method: :delete do %><i class="fa fa-remove"></i> 
                            <%end%> 
                          </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>