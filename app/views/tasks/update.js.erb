$(".progress-text").html("<small><strong><%= @task.progress.to_i %>%</strong> of this task has been completed.</small>");
	
<%if params[:task][:request] == "slider" && @task.progress < 100 || params[:checked] == "false" %>
	$(".checkbox-task-show").html('<div class="i-checks complete-checkbox" data-task-id="<%= @task.id %>"><label> <input type="checkbox" value=""> <i></i> Complete </label></div>');
<%elsif params[:task][:request] == "slider" && @task.progress == 100 || params[:checked] == "true" %>
	$(".checkbox-task-show").html('<div class="i-checks completed-check" data-task-id="<%= @task.id %>"><label> <input type="checkbox" checked=""> <i></i> Complete </label></div>'); 
<%end%>
	
$('.i-checks').iCheck({
  checkboxClass: 'icheckbox_square-green'
});
