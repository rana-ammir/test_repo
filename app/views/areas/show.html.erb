<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><%= @area.description.titleize.truncate(25) %></h2>
        <ol class="breadcrumb">
          <li>
            <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
          </li>
          <li>
            <%= link_to "Strategic Plan", strategic_plan_path %>
          </li>
          <li>
            <a href="/strategic_plan/plans/<%=@plan.id%>"><%= @plan.name.titleize %></a>
          </li>
          <li>
            <%= link_to "#{@division.name.titleize}", plan_division_path(plan_id: @plan.id, id: @division.id)%>
          </li>
          
          <li class="active">
            <strong>
              <%= link_to "#{@area.description.titleize.truncate(25)}" %>
            </strong>
          </li>
        </ol>
    </div>
<div class="col-lg-2">
</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
  <div class="col-lg-1">
  </div>
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Select Goal</h5>
                  <div class="ibox-tools">
                  </div>
              </div>
              <div class="ibox-content">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Number</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @goals.each do |goal| %>
                        <tr>
                          <td><%= goal.number %></td>
                          <td><%= link_to "#{goal.description}",plan_division_area_goal_objectives_path(area_id: @area.id, goal_id: goal.id)%></td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>        
              </div>
          </div>
      </div>
  </div>
</div>