<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Departments</h5>
                <div class="ibox-tools">
                    <%= link_to 'New Department', new_department_path, class: "btn btn-sm btn-white", style: "color:grey;"%>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @departments.each do |department| %>
                        <tr>
                          <td><%= department.id%></td>
                          <td><span class="line"><%= department.name %></span></td>
                          <td><%= link_to edit_department_path(department) do %><i class="fa fa-pencil-square-o"></i> <%end%> &nbsp&nbsp <%= link_to department_path(department), data: { confirm: 'Are you sure?' }, method: :delete do %><i class="fa fa-remove"></i> 
                          <%end%> </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>