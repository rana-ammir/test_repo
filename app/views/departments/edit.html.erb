<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Edit</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li>
            <%= link_to "#{current_user.organization_name}", organization_divisions_path %>
        </li>
        <li>
            <%= link_to "#{@division.name.titleize}", organization_division_departments_path %>
        </li>
        <li class="active">
            <strong>
                <a>Edit</a>
            </strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
        </div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-1">
</div>
    <div class="col-lg-10">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Department</h5>
                <div class="ibox-tools">
                    <%= link_to organization_division_departments_path, style: "color:grey;" do %><i class="fa fa-remove"></i> 
                    <%end%>
                </div>
            </div>
            <div class="ibox-content">
                <%= form_for @department, url: organization_division_department_path, method: "put", html: {class: "form-horizontal"} do |f| %>
								  <div class="form-group"><label class="col-lg-2 control-label">Name</label>
								    <div class="col-lg-10">
								      <%= f.text_field :name , placeholder: "Enter name", class: "form-control" %>
								      <%= f.hidden_field :division_id, value: @division.id%>
								    </div>
								  </div>  
								  <div class="form-group">
								    <div class="col-lg-offset-2 col-lg-10">
								      <%= f.submit class: "btn btn-sm btn-primary" %>
								    </div>
								  </div>
								<% end %>

            </div>
        </div>
    </div>
</div>
