<%= form_for @department, url: organization_division_departments_path, method: "post", html: {class: "form-horizontal"} do |f| %>
  <div class="form-group"><label class="col-lg-2 control-label">Name</label>
    <div class="col-lg-10">
      <%= f.text_field :name , placeholder: "Enter name", class: "form-control" %>
      <%= f.hidden_field :division_id, value: @division.id%>
    </div>
  </div>  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
