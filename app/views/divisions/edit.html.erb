<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-1">
</div>
    <div class="col-lg-10">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Division</h5>
                <div class="ibox-tools">
                    <%= link_to organization_divisions_path, style: "color:grey;" do %><i class="fa fa-remove"></i> 
                    <%end%>
                </div>
            </div>
            <div class="ibox-content">
                <%= form_for @division, url: organization_division_path, method: "put", html: {class: "form-horizontal"} do |f| %>
								  <div class="form-group"><label class="col-lg-2 control-label">Name</label>
								    <div class="col-lg-10">
								      <%= f.text_field :name , placeholder: "Enter name", class: "form-control" %>
								      <%= f.hidden_field :organization_id, value: current_user.organization.id%>
								    </div>
								  </div>  
								  <div class="form-group">
								    <div class="col-lg-offset-2 col-lg-10">
								      <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
								    </div>
								  </div>
								<% end %>
            </div>
        </div>
    </div>
</div>
