<% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
  <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>User Profile</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
            </li>
            <li class="active">
                <strong>Profile</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row m-b-lg m-t-lg">
    <div class="col-lg-2"></div>
    <div class="col-md-6">
        <div class="profile-image">
            <%= image_tag @user.avatar.url, class: "img-circle circle-border m-b-md"  %>
        </div>
        <div class="profile-info" style= "padding-top: 20px;">
          <h2 class="no-margins">
              <%= @user.fullname %>
          </h2>
          <h4><%= @user.job_title ? @user.job_title.titleize : "" %></h4>
        </div>
    </div>
  </div>
  <div class="row">
  <div class="col-lg-2">
  </div>
      <div class="col-lg-8">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>User Password & Avatar</h5>
              </div>
              <div class="ibox-content">
                <%= form_for(@user, url: registration_path(@user), html: { method: :put, class: "form-horizontal"}) do |f| %>
                    <div class="form-group">
                    <label class="col-lg-2 control-label">Avatar</label>
                      <div class="col-lg-10">  
                        <%= f.file_field :avatar, class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                    <label class="col-lg-2 control-label">Password</label>
                      <div class="col-lg-10">  
                        <%= f.password_field :password, autocomplete: "off", placeholder:"Enter password or Leave blank if you don't want to change password.", class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group"><label class="col-lg-2 control-label">Confirm Password</label>
                      <div class="col-lg-10"> 
                        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter new password again.", class: "form-control" %>
                      </div>
                    </div>

                    <div class="form-group"><label class="col-lg-2 control-label">Current Password</label>
                      <div class="col-lg-10"> 
                        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Enter current password to confirm your changes.", class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
                      </div>
                    </div>
                <% end %>
              </div>
          </div>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Teams</h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @teams.each_with_index do |team, index| %>
                        <tr>
                          <%number = index+1%>
                          <td><%= number %></td>
                          <td><%= team.name %></td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>
