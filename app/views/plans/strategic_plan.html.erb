<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Strategic Plan</h2>
        <ol class="breadcrumb">
          <li>
            <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
          </li>
          <li class="active">
            <strong>
              <%= link_to "Strategic Plan", strategic_plan_path %>
            </strong>
          </li>
        </ol>
    </div>
<div class="col-lg-2">
</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
  <div class="col-lg-1">
  </div>
      <div class="col-lg-10">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Select Plan</h5>
                  <div class="ibox-tools">
                  </div>
              </div>
              <div class="ibox-content">
                <div class="row">
                  <%= form_for plans_path, method: "get", html: {class: "form-horizontal"} do |f| %>
                    <div class="form-group">
                      <label class="col-lg-2 control-label">Plan</label>
                      <div class="col-lg-9">
                        <%= f.select :plan_id, options_for_select(@strategy_plans_list.map{ |plan| [plan.name, plan.id] }), { prompt: 'Select plan' }, { class: "form-control m-b plan-select-field" }%> 
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <%= link_to "Select plan", '#', class: "btn btn-sm btn-primary select-plan-link" %>
                      </div>
                    </div>
                  <% end %>
                </div>              
              </div>
          </div>
      </div>
  </div>
</div>