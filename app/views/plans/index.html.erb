<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Plans</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li class="active">
            <strong>
              <%= link_to "Plans", plans_path %>
            </strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
        </div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Plans </h5>
                <div class="ibox-tools">
                    <%= link_to 'New Plan', new_plan_path, class: "btn btn-sm btn-white", style: "color:grey;"%>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Fiscal year</th>
                        <th>Date begin</th>
                        <th>Date end</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @plans.each do |plan| %>
                        <tr>
                          <td><span class="line"><%= plan.name %></span></td>
                          <td><%= plan.fiscal_year %></td>
                          <td><%= plan.begin_on.strftime("%m-%d-%Y") %></td>
                          <td><%= plan.end_on.strftime("%m-%d-%Y") %></td>
                          <td><%= plan.status.titleize %></td>
                          <td><%= link_to edit_plan_path(id: plan.id) do %><i class="fa fa-pencil-square-o"></i> <%end%> &nbsp&nbsp <%= link_to plan_path(id: plan.id), data: { confirm: 'Are you sure?' }, method: :delete do %><i class="fa fa-remove"></i> 
                          <%end%> </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>