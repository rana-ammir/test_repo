<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>Edit Strategy</h5>
        <div class="ibox-tools">
        </div>
    </div>
    <div class="ibox-content">
      <div class="row">
        <%= form_for strategy, url: plan_division_department_area_goal_objective_strategy_path(plan_id: plan.id,goal_id: goal.id, objective_id: objective.id, id: strategy.id ), method: "put", html: {class: "form-horizontal"} do |f| %>
          <div class="form-group">
            <label class="col-lg-2 control-label">Number</label>
            <div class="col-lg-9">
              <%= f.number_field :number, class: "form-control", placeholder: "Enter number", min: 0, max: "9999999999" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-2 control-label">Description</label>
            <div class="col-lg-9">
              <%= f.text_area :description, class: "form-control", placeholder: "Enter description" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-2 control-label">Target Date</label>
            <div class="col-lg-9">
              <div class="input-group m-b"><span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span> 
                <%= f.text_field :end_on, autocomplete: :off, class: "datepicker form-control", placeholder: "Choose date", value: f.object.end_on ? f.object.end_on.strftime("%m/%d/%Y") : nil %>
              </div>
            </div>
          </div>
          <%= f.hidden_field :objective_id, value: @objective.id %>
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <%= f.submit "Update Strategy" , class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>              
    </div>
</div>