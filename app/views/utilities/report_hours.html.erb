<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Report Hours</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li class="active">
        <strong>
          <%= link_to "Report Hours", report_hours_path %>
        </strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-1">
    </div>  
      <div class="col-lg-10">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Report Hours</h5>
              </div>
              <div class="ibox-content">
                <div class="form-horizontal">
                  <div class="form-group"><label class="col-lg-2 control-label">Strategic Plan</label>
                    <div class="col-lg-9">
                      <%= select_tag 'plan_id', options_for_select(@plans.map{ |plan| [plan.name, plan.id] }), class: "form-control selected_plan", prompt: "Select plan" %>
                    </div>
                  </div>
                  <div class="form-group"><label class="col-lg-2 control-label">Report For</label>
                    <div class="col-lg-9">
                      <%= select_tag 'member_filter_id', options_for_select(@member_filter), class: "form-control selected_member_filter", prompt: "Select report for" %>
                    </div>
                  </div>
                  <div class="filtered-dropdown">
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                      <btn class="btn btn-sm btn-primary"> <%= link_to "Generate Report", "#", class: "generate_report_link", style: "color: white;" %></btn>
                    </div>
                  </div>
                </div>
              </div>
          </div>
      </div>
  </div>
</div>