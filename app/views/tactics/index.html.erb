<% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
  <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tactics</h2>
        <ol class="breadcrumb">
          <li>
            <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
          </li>
          <li>
            <%= link_to "Strategic Plan", strategic_plan_path %>
          </li>
          <li>
            <a href="/strategic_plan/plans/<%=@plan.id%>"><%= @plan.name.titleize %></a>
          </li>
          <li>
            <%= link_to "#{@division.name.titleize}", plan_division_path(plan_id: @plan.id, id: @division.id)%>
          </li>
          <li>
            <%= link_to "#{@department.name.titleize}", plan_division_department_path(plan_id: @plan.id, division_id: @division.id, id: @department.id)%>
          </li>
          <li>
            <%= link_to "#{@area.description.titleize.truncate(25)}", plan_division_department_area_path(plan_id: @plan.id, division_id: @division.id, department_id: @department.id, id: @area.id) %>
          </li>
          <li>
              <a href="/strategic_plan/plans/<%=@plan.id%>/divisions/<%=@division.id%>/departments/<%=@department.id%>/areas/<%=@area.id%>"><%= @goal.description.titleize.truncate(25) %></a>
          </li>
          <li>
            <%= link_to "Objectives", plan_division_department_area_goal_objectives_path(plan_id: @plan.id, division_id: @division.id, department_id: @department.id, area_id: @area.id, goal_id: @goal.id) %>
          </li>
          <li>
            <%= link_to "Strategies", plan_division_department_area_goal_objective_strategies_path(plan_id: @plan.id, division_id: @division.id, department_id: @department.id, area_id: @area.id, goal_id: @goal.id, objective_id: @objective.id) %>
          </li>
          <li class="active">
            <strong>
              <%= link_to "Tactics", plan_division_department_area_goal_objective_strategy_tactics_path %>
            </strong>
          </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-1">
    </div>
      <div class="col-lg-10">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Selected Goal</h5>
                  <div class="ibox-tools">
                  </div>
              </div>
              <div class="ibox-content">
                <label>Goal: </label> <%= @goal.description.titleize %>
              </div>
          </div>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-1">
    </div>
      <div class="col-lg-10">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Selected Objective</h5>
                  <div class="ibox-tools">
                  </div>
              </div>
              <div class="ibox-content">
                <label>Objective: </label> <%= @objective.description.titleize %>
              </div>
          </div>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-1">
    </div>
      <div class="col-lg-10">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Selected Strategy</h5>
                  <div class="ibox-tools">
                  </div>
              </div>
              <div class="ibox-content">
                <label>Strategy: </label> <%= @strategy.description.titleize %>
              </div>
          </div>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tactics</h5>
                <div class="ibox-tools">
                    <a data-toggle="modal" class="btn btn-sm btn-white" style="color:grey;" href="#modal-form">New Tactic</a>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>#</th>
                      <th>Description</th>
                      <th>Target Date</th>
                      <th>Actual Days</th>
                      <th>Actual Hours</th>
                      <th>Budgeted Days</th>
                      <th>Budgeted Hours</th>
                      <th>% Complete</th>
                      <th>Assigned To</th>
                      <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @tactics.each do |tactic| %>
                        <tr>
                          <td><%= tactic.number %></td>
                          <td><%= tactic.description %></td>
                          <td><%= tactic.end_on ? tactic.end_on.strftime("%m-%d-%Y") : "" %></td>
                          <td><%= tactic.actual_days %></td>
                          <td><%= tactic.actual_hours%></td>
                          <td><%= tactic.days %></td>
                          <td><%= tactic.hours %></td>
                          <td>
                            <%if tactic.end_on > Date.today%>
                              <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= tactic.percent_of_strategy.to_i%>%" aria-valuenow="<%= tactic.percent_of_strategy%>" aria-valuemin="0" aria-valuemax="100">
                                  <%= tactic.percent_of_strategy.to_i%>%
                                </div>
                              </div>
                            <%elsif tactic.end_on < Date.today and tactic.percent_of_strategy < 100 %>
                              <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= tactic.percent_of_strategy.to_i%>%" aria-valuenow="<%= tactic.percent_of_strategy%>" aria-valuemin="0" aria-valuemax="100">
                                  <%= tactic.percent_of_strategy.to_i%>%
                                </div>
                                <%remaining_percent = 100 - tactic.percent_of_strategy.to_i %>
                                <div class="progress-bar bg-danger" role="progressbar" style="width: <%= remaining_percent%>%" aria-valuenow="<%= remaining_percent%>" aria-valuemin="0" aria-valuemax="100">
                                </div>
                              </div>
                            <%elsif tactic.end_on < Date.today and tactic.percent_of_strategy = 100 %>
                              <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: <%= tactic.percent_of_strategy.to_i%>%" aria-valuenow="<%= tactic.percent_of_strategy%>" aria-valuemin="0" aria-valuemax="100">
                                  <%= tactic.percent_of_strategy.to_i%>%
                                </div>
                              </div>
                            <%end%>
                          </td>
                          <td>
                            <a data-toggle="modal" data-tactic-id="<%= tactic.id%>" href="#user-assign-modal-form" class="user-assign-link">
                              <i class="fa fa-user"></i>
                            </a> &nbsp&nbsp
                            <a data-toggle="modal" data-tactic-id="<%= tactic.id%>" href="#team-assign-modal-form" class="team-assign-link">
                              <i class="fa fa-users"></i>
                            </a>
                          </td>
                          <td>
                            <a data-toggle="modal" data-tactic-id="<%= tactic.id%>" data-strategy-id="<%= @strategy.id%>" data-objective-id="<%= @objective.id%>" data-plan-id="<%= @plan.id%>" data-division-id="<%= @division.id%>" data-department-id="<%= @department.id%>" data-area-id="<%= @area.id%>" data-goal-id="<%= @goal.id%>" href="#tactic-attachment-modal-form" class="asset-tactic-link">
                              <i class="fa fa-paperclip" aria-hidden="true"></i>
                            </a> 
                            <a data-toggle="modal" data-tactic-id="<%= tactic.id%>" data-strategy-id="<%= @strategy.id%>" data-objective-id="<%= @objective.id%>" data-plan-id="<%= @plan.id%>" data-division-id="<%= @division.id%>" data-department-id="<%= @department.id%>" data-area-id="<%= @area.id%>" data-goal-id="<%= @goal.id%>"href="#edit-modal-form" class="edit-tactic-link">
                              <i class="fa fa-pencil-square-o"></i>
                            </a>
                            <%= link_to plan_division_department_area_goal_objective_strategy_tactic_path(id: tactic.id), data: { confirm: 'Are you sure?' }, method: :delete do %>
                              <i class="fa fa-remove"></i> 
                            <%end%>
                          </td>
                        </tr>                    
                      <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>

