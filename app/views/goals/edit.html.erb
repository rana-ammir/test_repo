<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Edit</h2>
        <ol class="breadcrumb">
          <li>
            <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
          </li>
          <li>
            <%= link_to "Goals", goals_path %>
          </li>
          <li class="active">
            <strong>
              <%= link_to "Edit", edit_goal_path(id: @goal.id) %>
            </strong>
          </li>
        </ol>
    </div>
<div class="col-lg-2">
</div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-1">
</div>
    <div class="col-lg-10">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Goal</h5>
                <div class="ibox-tools">
                    <%= link_to goals_path, style: "color:grey;" do %><i class="fa fa-remove"></i> 
                    <%end%>
                </div>
            </div>
            <div class="ibox-content">
              <div class="row">
		            <%= form_for @goal, url: goal_path, method: "put", html: {class: "form-horizontal"} do |f| %>
		              <div class="form-group">
		                <label class="col-lg-2 control-label">Number</label>
		                <div class="col-lg-9">
		                  <%= f.number_field :number, class: "form-control", placeholder: "Enter number", min: 0, max: "9999999999" %>
		                </div>
		              </div>
		              <div class="form-group">
		                <label class="col-lg-2 control-label">Description</label>
		                <div class="col-lg-9">
		                  <%= f.text_field :description, class: "form-control", placeholder: "Enter description"%> 
		                </div>
		              </div>
                  <div class="form-group">
                    <label class="col-lg-2 control-label">Division</label>
                    <div class="col-lg-9">
                      <%= f.collection_select :area_id, @divisions, :id, :name, { prompt: 'Select division' }, { class: "form-control m-b goal-edit-division" } %>
                    </div>
                  </div>
                  <div class="form-group goal-edit-division-field">
                    <label class="col-lg-2 control-label">Area</label>
                    <div class="col-lg-9">
		                  <%= f.collection_select :area_id, @areas, :id, :description, { prompt: 'Select area' }, { class: "form-control m-b" } %>
                    </div>
                  </div>
                  <div class="form-group">
		                <div class="col-lg-offset-2 col-lg-10">
		                  <%= f.submit "Update Goal" ,class: "btn btn-sm btn-primary" %>
		                </div>
		              </div>
		            <% end %>
		          </div>  
            </div>
        </div>
    </div>
</div>
