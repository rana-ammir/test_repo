<%= form_for @organization, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group"><label class="col-lg-2 control-label">Name</label>
    <div class="col-lg-10">
      <%= f.text_field :name , placeholder: "Enter name", class: "form-control" %>
    </div>
  </div>
  <div class="form-group"><label class="col-lg-2 control-label">Hours</label>
    <div class="col-lg-10">
      <%= f.number_field :hours_in_day , placeholder: "Enter number", class: "form-control", min: 0, max: "9999999999"%>
    </div>
  </div>
  <div class="form-group"><label class="col-lg-2 control-label">Address</label>
    <div class="col-lg-10">
      <%= f.text_area :address , placeholder: "Enter address", class: "form-control" %>
    </div>
  </div>  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>